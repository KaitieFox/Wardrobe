@model IEnumerable<WardrobeMVC.Models.Accessory>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron" id="accessoryindex">
    <div class="container">
        <h1>Wardrobe for a Revolution</h1>
        <p class="lead">organize your clothes to suit your cause.</p>
        <p>@Html.ActionLink("Create New Accessory", "Create", "Accessories", null, new { @class = "btn btn-default" })</p>
    </div>
</div>

<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src=@Html.DisplayFor(modelItem => item.AccessoryPhoto) alt="Accessories">
                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.AccessoryName)</h3>
                    <p>@Html.ActionLink("View Details", "Details", "Accessories", new { id = item.AccessoryID }, new { @class = "btn btn-default" })</p>
                    <p><span>@Html.ActionLink("Edit This", "Edit", "Tops", new { id = item.AccessoryID }, new { @class = "btn btn-default" })</span></p>
                </div>
            </div>
        </div>

    }
</div>




